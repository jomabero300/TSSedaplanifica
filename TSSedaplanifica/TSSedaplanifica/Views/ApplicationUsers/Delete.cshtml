@model TSSedaplanifica.Models.ApplicationUser.RoleUserModelView

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Realmente desea eliminar esto ?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash2-fill"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-chevron-left"></i> Retornar</a>
    </form>
</div>
