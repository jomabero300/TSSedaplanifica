@model TSSedaplanifica.Data.Entities.Product

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CategoriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategories.FirstOrDefault().Category.Name)
            </th>
            <th>
                <a asp-action="AddProductCategory" asp-route-id="@Model.Id" class="btn btn-sm btn-warning"><i class="bi bi-plus-circle-fill"></i> Nuevo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.ProductCategories.Count>0)
        {
            @foreach (var item in Model.ProductCategories)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    <a asp-action="DeleteProductCategory" asp-route-id="@item.Category.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Borrar</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>