@model TSSedaplanifica.Models.SchoolViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo</h1>

<h4>Sede - institución educativa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSchool">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CityId" />
            <input type="hidden" asp-for="ZoneId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaneCode" class="control-label"></label>
                <input asp-for="DaneCode" class="form-control" />
                <span asp-validation-for="DaneCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <button class="btn btn-primary" type="submit"><i class="bi bi-save2-fill"></i> Guardar</button>
            <a asp-action="Details" asp-route-id="@Model.Id"class="btn btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}