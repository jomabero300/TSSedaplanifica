@model TSSedaplanifica.Data.Entities.School

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>¿Está seguro de querer borrar esta sede - institución educativa?</h3>
<div>
    <h4>sede - Institución educativa</h4>
    @if(TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong> Éxito ! - </strong>  @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    }

    <hr />
    
    <partial name="_SchoolDetailsDelete" />

    <form asp-action="DeleteSchool">
        <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger" type="submit"><i class="bi bi-trash-fill"></i> Borrar</button>
            <a asp-action="Details" asp-route-id="@Model.SchoolCampus.Id"class="btn btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
    </form>
</div>
