@model TSSedaplanifica.Data.Entities.Solicit


@{
    ViewData["Title"] = "Detalles";
}

<h1>Inventario Inicial</h1>
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong> Éxito ! - </strong>  @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}

<div>
    <h4>Solicitud inicial</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.School.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.School.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfSolicit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfSolicit)
        </dd>
    </dl>
</div>

<div>
    @if (Model.SolicitStates.Name == "Borrador")
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn bn-sm btn-warning"><i class="bi bi-pencil-fill"></i> Editar</a>
    }
    <a asp-action="StartStocktaking" class="btn btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <div class="container-fluid">
            <div class="card mt-2">
                <div class="card-header text-danger">
                    <i class="fa fa-object-group"></i>  <strong>Elementos</strong>
                </div>
                <div class="card-body">
                    <div id="view-all">
                        @await Html.PartialAsync("_StartStocktakingDetailsViewAll", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>