@model TSSedaplanifica.Data.Entities.Solicit


<table class="table table-striped table-responsive-md table-bordered smfont" id="SolicitDetailTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SolicitDetails.FirstOrDefault().Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SolicitDetails.FirstOrDefault().Quantity)
            </th>
            <th style="text-align:center">
                <a asp-action="StartStocktakingProductAdd" asp-route-id="@Model.Id" class="btn btn-sm btn-primary"><i class="bi bi-plus-circle-fill"></i> Nuevo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.SolicitDetails.Count > 0)
        {
            @foreach (var item in Model.SolicitDetails)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td style="text-align:center">                        
                        <a asp-action="StartStocktakingProductDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Borrar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>