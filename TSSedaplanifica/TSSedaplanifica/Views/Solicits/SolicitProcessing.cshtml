@model TSSedaplanifica.Data.Entities.Solicit

@{
    ViewData["Title"] = "Procesado";
}

<h1>Procesado</h1>

<h3>¿Está seguro de pone en estado de procesado esta solicitud?</h3>


<h4>Solicitud</h4>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="SolicitProcessing">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>

            <div class="form-group">
                <label asp-for="DateOfSolicit" class="control-label"></label>
                <input asp-for="DateOfSolicit" class="form-control"  disabled rows="3" />
                <span asp-validation-for="DateOfSolicit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" disabled rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <button class="btn btn-primary" type="submit"><i class="bi bi-save2-fill"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}