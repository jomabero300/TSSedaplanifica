@model TSSedaplanifica.Models.SolicitConsolidateViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Crear</h1>

<h4>Consolidado</h4>
<hr />



<div class="row">
    <div class="col-md-12">
        <form asp-action="RectorConsolidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SolicitCons"/>
            <input type="hidden" asp-for="School" />
            <input type="hidden" asp-for="Details" />

            <div class="form-group mt-2">
                <button class="btn btn-sm btn-primary" type="submit"><i class="bi bi-send-fill"></i> Enviar</button>
                <a asp-action="Index" class="btn btn-sm btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

<table class="table table-striped table-responsive-md table-bordered smfont mt-2" id="SolicitTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>
